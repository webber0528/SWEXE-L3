<% if @tweets.errors.any? %>
<h3>エラーがあります。</h3>
<ul style="color: red">
<% @tweets.errors.full_messages.each do |err| %>
<li><%= err %></li>
<% end %>
</ul>
<% end %>

<%= form_for @tweets , tdate: {action: :update} do |f| %>
<%= f.label :message, 'メッセージ:' %>
<%= f.text_field :message %>
<%= f.submit '更新' %>
<% end %>